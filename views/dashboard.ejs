<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Book Story - Dashboard</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>

<div class="d-flex min-vh-100 wrapper">

  <!-- Sidebar -->
  <aside class="sidebar d-flex flex-column p-3 text-white">
    <div class="brand text-center mb-3">
      <h2 class="m-0">📚 Book Story</h2>
    </div>
    <hr class="divider">
    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item"><a href="/dashboard" class="nav-link"><i class="fa fa-tachometer-alt me-2"></i> Dashboard</a></li>
      <li class="nav-item"><a href="/auther" class="nav-link"><i class="fa fa-user-edit me-2"></i> Authors</a></li>
      <li class="nav-item"><a href="../book/book.html" class="nav-link"><i class="fa fa-book me-2"></i> Books</a></li>
      <li class="nav-item"><a href="../Categories/Categories.html" class="nav-link"><i class="fa fa-list-alt me-2"></i> Categories</a></li>
      <li class="nav-item"><a href="../Users/Users.html" class="nav-link"><i class="fa fa-users me-2"></i> Users</a></li>
      <li class="nav-item"><a href="../Settings/Settings.html" class="nav-link"><i class="fa fa-cog me-2"></i> Settings</a></li>
    </ul>
    <div class="mt-auto small text-center sidebar-footer">
      <p class="mb-0">Tabish Nasrati</p>
    </div>
  </aside>

  <!-- Main Page -->
  <main class="page flex-grow-1 p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3 class="mb-0">📊 Dashboard Overview</h3>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
      <div class="col-6 col-md-3">
        <div class="card stat-card text-center shadow-sm">
          <div class="card-body">
            <h6 class="card-title mb-2">👁️ Views</h6>
            <p id="views" class="card-text fs-4 fw-bold">0</p>
          </div>
        </div>
      </div>
      <div class="col-6 col-md-3">
        <div class="card stat-card text-center shadow-sm">
          <div class="card-body">
            <h6 class="card-title mb-2">✍️ Authors</h6>
            <p id="authors" class="card-text fs-4 fw-bold">0</p>
          </div>
        </div>
      </div>
      <div class="col-6 col-md-3">
        <div class="card stat-card text-center shadow-sm">
          <div class="card-body">
            <h6 class="card-title mb-2">📚 Books</h6>
            <p id="books" class="card-text fs-4 fw-bold">0</p>
          </div>
        </div>
      </div>
      <div class="col-6 col-md-3">
        <div class="card stat-card text-center shadow-sm">
          <div class="card-body">
            <h6 class="card-title mb-2">🗂 Categories</h6>
            <p id="categories" class="card-text fs-4 fw-bold">0</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Activity Chart -->
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <h5 class="card-title">📈 Activity Chart</h5>
        <canvas id="activityChart" height="70"></canvas>
      </div>
    </div>
  </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/dashboard.js"></script>
</body>
</html>
