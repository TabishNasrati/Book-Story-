<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Book Story - Settings</title>

  <!-- Bootstrap & FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/Settings.css">
  <!-- <link rel="stylesheet" href="./Settings.css"> -->
</head>
<body>

<div class="d-flex min-vh-100 wrapper">

  <!-- Sidebar -->
  <aside class="sidebar d-flex flex-column p-3 text-white">
    <div class="brand text-center mb-3">
      <h2 class="m-0">ðŸ“š Settings</h2>
    </div>
    <hr class="divider">
    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item"><a href="/dashboard" class="nav-link"><i class="fa fa-tachometer-alt me-2"></i> Dashboard</a></li>
      <li class="nav-item"><a href="/auther" class="nav-link"><i class="fa fa-user-edit me-2"></i> Authors</a></li>
      <li class="nav-item"><a href="/book" class="nav-link"><i class="fa fa-book me-2"></i> Books</a></li>
      <li class="nav-item"><a href="/Categories" class="nav-link"><i class="fa fa-list-alt me-2"></i> Categories</a></li>
      <li class="nav-item"><a href="/users" class="nav-link"><i class="fa fa-users me-2"></i> Users</a></li>
      <li class="nav-item"><a href="/Settings" class="nav-link active"><i class="fa fa-cog me-2"></i> Settings</a></li>
    </ul>
    <div class="mt-auto small text-center sidebar-footer">
      <p class="mb-0">Tabish Nasrati</p>
    </div>
  </aside>

  <!-- Main Content -->
  <main class="flex-grow-1 p-4">
    <div class="container">
      <h3 class="mb-4">Account Settings</h3>
      
      <div class="card shadow-sm p-3">
        <form id="settingsForm" class="row g-3">
          <div class="col-md-6">
            <label for="username" class="form-label">Username</label>
            <input type="text" id="username" class="form-control" placeholder="Enter username">
          </div>
          <div class="col-md-6">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" class="form-control" placeholder="Enter email">
          </div>
          <div class="col-md-6">
            <label for="password" class="form-label">Password</label>
            <div class="input-group">
              <input type="password" id="password" class="form-control" placeholder="Enter password">
              <button type="button" class="btn btn-outline-secondary" id="togglePassword"><i class="fa fa-eye"></i></button>
            </div>
          </div>
          <div class="col-md-6">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input type="password" id="confirmPassword" class="form-control" placeholder="Confirm password">
          </div>
          <div class="col-md-6">
            <label for="avatar" class="form-label">Profile Avatar</label>
            <input type="file" id="avatar" class="form-control">
          </div>
          <div class="col-md-6">
            <label for="theme" class="form-label">Theme</label>
            <select id="theme" class="form-select">
              <option value="light">Light</option>
              <option value="dark">Dark</option>
            </select>
          </div>
          <div class="col-12">
            <button type="submit" class="btn btn-success w-100">Save Changes</button>
          </div>
        </form>
      </div>

      <!-- Message -->
      <div id="message" class="mt-3"></div>
    </div>
  </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
 <script src="/js/Settings.js"></script>
<!-- <script src="./Settings.js"></script> -->
</body>
</html>
