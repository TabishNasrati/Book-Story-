<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Book Story - Categories</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <link rel="stylesheet" href="/css/Categories.css">
  <!-- <link rel="stylesheet" href="/css/Categories.css"> -->
</head>
<body>
<div class="d-flex min-vh-100 wrapper">

  <!-- Sidebar -->
  <aside class="sidebar d-flex flex-column p-3 text-white">
    <div class="brand text-center mb-3">
      <h2 class="m-0">ðŸ“š Categories</h2>
    </div>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
      <li><a href="/dashboard" class="nav-link"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a></li>
      <li><a href="/author" class="nav-link"><i class="fa fa-user-edit me-2"></i>Authors</a></li>
      <li><a href="/book" class="nav-link"><i class="fa fa-book me-2"></i>Books</a></li>
      <li><a href="/Categories" class="nav-link active"><i class="fa fa-list-alt me-2"></i>Categories</a></li>
      <li><a href="/users" class="nav-link"><i class="fa fa-users me-2"></i>Users</a></li>
      <li><a href="/Settings" class="nav-link"><i class="fa fa-cog me-2"></i>Settings</a></li>
    </ul>
    <div class="mt-auto small text-center sidebar-footer">
      <p class="mb-0">Tabish Nasrati</p>
    </div>
  </aside>

  <!-- Main content -->
  <main class="content flex-grow-1 p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3>Manage Categories</h3>
      <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#categoryModal"> Add Category</button>
    </div>

    <div class="table-container">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="categoryTable">
          
        </tbody>
      </table>
    </div>
  </main>
</div>

<!-- Modal -->
<div class="modal fade" id="categoryModal" tabindex="-1">
  <div class="modal-dialog">
    <form id="categoryForm" class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Category</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="editIndex">
        <div class="mb-3">
          <label class="form-label">Name</label>
          <input type="text" id="catName" class="form-control" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Description</label>
          <textarea id="catDesc" class="form-control" rows="3" required></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </form>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
 <script src="/js/Categories.js"></script>
 <!-- <script src="./Categories.js"></script> -->
</body>
</html>
