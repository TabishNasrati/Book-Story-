<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Book Story - Authors</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <link rel="stylesheet" href="/css/author.css">
  
</head>
<body>

  <div class="d-flex wrapper">

    <!-- Sidebar -->
    <aside class="sidebar d-flex flex-column p-3">
      <div class="brand text-center mb-3">
        <h2>ðŸ“š Authors</h2>
      </div>
      <hr class="divider">
      <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item"><a href="/dashboard" class="nav-link"><i class="fa fa-tachometer-alt me-2"></i> Dashboard</a></li>
        <li class="nav-item"><a href="/author" class="nav-link active"><i class="fa fa-user-edit me-2"></i> Authors</a></li>
        <li class="nav-item"><a href="/book" class="nav-link"><i class="fa fa-book me-2"></i> Books</a></li>
        <li class="nav-item"><a href="/Categories" class="nav-link"><i class="fa fa-list-alt me-2"></i> Categories</a></li>
        <li class="nav-item"><a href="/users" class="nav-link"><i class="fa fa-users me-2"></i> Users</a></li>
        <li class="nav-item"><a href="/Settings" class="nav-link"><i class="fa fa-cog me-2"></i> Settings</a></li>
      </ul>
      <div class="mt-auto small text-center">
        <p class="mb-0">Tabish Nasrati</p>
      </div>
    </aside>
  
    <!-- Main content -->
    <main class="flex-grow-1 p-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Authors List</h3>
        <span class="badge bg-success fs-6" id="authorCount">0 Authors</span>
      </div>
  
      <!-- Add Author Button -->
      <div class="mb-3">
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addAuthorModal">
          <i class="fa fa-plus me-1"></i> Add New Author
        </button>
      </div>
  
      <!-- Authors Table -->
      <div class="table-container">
        <table class="table table-hover align-middle text-center">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Email</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="authorTable"></tbody>
        </table>
      </div>
    </main>
  </div>
  
  <!-- Add Author Modal -->
  <div class="modal fade" id="addAuthorModal" tabindex="-1" aria-labelledby="addAuthorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
      <div class="modal-content">
        <div class="modal-header bg-success text-white">
          <h5 class="modal-title" id="addAuthorModalLabel">Add New Author</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="authorForm" class="row g-3">
            <div class="col-md-12">
              <input type="text" class="form-control" id="authorName" placeholder="Author Name" required>
            </div>
            <div class="col-md-12">
              <input type="email" class="form-control" id="authorEmail" placeholder="Author Email" required>
            </div>
            <div class="col-md-12">
              <button type="submit" class="btn btn-success w-100">Add Author</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Edit Author Modal -->
  <div class="modal fade" id="editAuthorModal" tabindex="-1" aria-labelledby="editAuthorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
      <div class="modal-content">
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title" id="editAuthorModalLabel">Edit Author</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="editAuthorForm" class="row g-3">
            <input type="hidden" id="editAuthorIndex">
            <div class="col-md-12">
              <input type="text" class="form-control" id="editAuthorName" placeholder="Author Name" required>
            </div>
            <div class="col-md-12">
              <input type="email" class="form-control" id="editAuthorEmail" placeholder="Author Email" required>
            </div>
            <div class="col-md-12">
              <button type="submit" class="btn btn-primary w-100">Save Changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/Author.js"></script>

</body>
</html>
